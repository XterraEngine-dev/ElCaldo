<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.gt.dev.lazaro.vista.CreditosActivity">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/light_cyan"
        card_view:cardCornerRadius="10dp">

        <ImageView
            android:id="@+id/ivImagen"
            android:layout_width="140dp"
            android:layout_height="150dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="180dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvOcupacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/tvNombre"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:textColor="@android:color/tertiary_text_light"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/tvNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tvOcupacion"
                android:layout_alignStart="@+id/tvOcupacion"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:textColor="@android:color/tertiary_text_light"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/tvCuenta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tvNombre"
                android:layout_alignStart="@+id/tvNombre"
                android:layout_below="@+id/tvNombre"
                android:gravity="center"
                android:textColor="@android:color/tertiary_text_light"
                android:textSize="30sp" />
        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
