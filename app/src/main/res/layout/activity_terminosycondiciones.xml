<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.gt.dev.lazaro.elcaldo.vista.TerminosCondicionesActivity">

    <include
        android:id="@+id/terminos_toolbar"
        layout="@layout/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/light_green"
        android:gravity="center_horizontal"
        android:text="Esta aplicacion no puede ser utilizada con fines de lucro, ni utilizar las imagenes de la aplicaciÃ³n."
        android:textColor="@android:color/white"
        android:textSize="24sp" />

    <Button
        android:id="@+id/bCondicion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@color/primaryColor"
        android:text="@string/aceptar"
        android:textColor="@android:color/white" />



    <com.google.android.gms.ads.AdView
        android:id="@+id/adViewCopyRigth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-1544943004985388/9444799353">
    </com.google.android.gms.ads.AdView>

</LinearLayout>
