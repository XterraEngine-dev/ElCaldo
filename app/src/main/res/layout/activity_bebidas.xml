<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.gt.dev.lazaro.elcaldo.vista.actividades.BebidasActivity">

    <include
        android:id="@+id/tb_bebidas_activity"
        layout="@layout/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.gt.dev.lazaro.elcaldo.utilidades.SlidingTabLayout
            android:id="@+id/tabs_bebidas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primaryColor"
            android:elevation="2dp" />


        <android.support.v4.view.ViewPager
            android:id="@+id/pager_bebidas"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"></android.support.v4.view.ViewPager>

    </LinearLayout>

</LinearLayout>
