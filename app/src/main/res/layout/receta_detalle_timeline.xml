<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/ni_detalle_timeline"
            android:layout_width="match_parent"
            android:layout_height="250dp" />

        <TextView
            android:id="@+id/tv_recipename_detailtime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recipename"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_region_detailtime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Region"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_ingredientes_detailtime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ingredientes"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_preparacion_detailtime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Preparacion"
            android:textSize="20sp" />

    </LinearLayout>

</ScrollView>
