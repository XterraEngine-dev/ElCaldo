<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    android:layout_height="200dp">

    <ImageView
        android:id="@+id/iv_plate_timeline"
        android:layout_width="match_parent"
        android:layout_marginTop="46dp"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:transitionName=""
        android:layout_gravity="center" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"

        android:layout_height="46dp">

        <ImageView
            android:id="@+id/iv_username_timeline"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:transitionName=""  />

        <TextView
            android:id="@+id/tv_username_timeline"
            android:layout_width="301dp"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="username"
            android:textSize="16sp"
            android:textStyle="bold|italic"
            android:layout_gravity="right|top" />
    </LinearLayout>



        <LinearLayout
            android:background="@color/background_footer"
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:layout_gravity="bottom"
            android:orientation="horizontal">

            <TextView
                android:text="Titulo"
                android:id="@+id/tv_platename_timeline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:maxLines="1"
                android:paddingTop="16dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingBottom="16dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textColor="@android:color/white" />

        </LinearLayout>

    <TextView
        android:text="like"
        android:id="@+id/tv_likes_timeline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|bottom"
        android:textSize="12dp"
        android:maxLines="1"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="10dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        android:textColor="@android:color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:orientation="horizontal">

        <TextView
            android:text="subtitulo"
            android:id="@+id/tv_region_timeline"
            android:layout_width="386dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:textSize="12dp"
            android:maxLines="1"
            android:paddingLeft="16dp"
            android:paddingBottom="10dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:textColor="@android:color/white"/>

    </LinearLayout>


</FrameLayout>